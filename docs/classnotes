def divNum(a,b):
	try:
		z = a/b
	except ZeroDivisionError as e:
		print('Please pass non-zero denomitor')
		return
	except TypeError as e2:
		print('Please pass numbers as arguments')
		return
	return z

divNum(3,0)
divNum('apple','mango')

